# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  # Every Vagrant virtual environment requires a box to build off of.

  config.vm.box = "debian/stretch64"

  servers = ['test-kvm-stretch', "test-kvm-buster"]

  config.vm.define "test-kvm-stretch" do |debstretch|
    debstretch.vm.box = "debian/stretch64"
  end

  config.vm.define "test-kvm-buster" do |debbuster|
    debbuster.vm.box = "debian/buster64"
  end

  servers.each do |server_name|
    config.vm.define server_name do |machine|
      machine.vm.hostname = server_name
    end
  end

  config.vm.provider :libvirt do |libvirt|
    libvirt.host = ""
    libvirt.nested = true
    libvirt.memory = 2048
  end

  config.vm.synced_folder "./files", "/vagrant", disabled: true

  config.vm.provision "ansible" do |ansible|
    ansible.compatibility_mode = "2.0"
    ansible.playbook = "provision.yml"
  end


end
